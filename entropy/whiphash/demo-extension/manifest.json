{
  "manifest_version": 3,
  "name": "WhipHash - Secure Password Generator",
  "version": "1.0.0",
  "description": "Generate cryptographically secure passwords using Pyth Network entropy",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open WhipHash"
  },
  "permissions": ["tabs", "activeTab"],
  "host_permissions": ["http://localhost:*", "http://127.0.0.1:*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src http://localhost:* http://127.0.0.1:*;"
  }
}
